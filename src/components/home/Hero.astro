---
interface Props {
  title: string;
  subtitle: string;
  heroMessage: string;
}

const { title, subtitle, heroMessage } = Astro.props;
---

<div class="welcome">
  <div class="caption">
    <h1>{title}</h1>
    <h2>{subtitle}</h2>
  </div>
  <div class="mapcat">
    <img src="/img/welcome.png" id="mapcat_image" alt="MapCat mascot" />
    <div id="mapcat_message">
      <span set:html={heroMessage.split('\n').join('<br />')} />
    </div>
  </div>
</div>

<style>
  .welcome {
    background-image: url('/img/top-background.jpg');
    background-size: cover;
    background-position: center;
    position: relative;
    width: 100%;
    height: auto;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    flex-direction: row;
    margin-bottom: 2rem;
  }

  .caption {
    width: 300px;
    height: auto;
    text-align: center;
    flex-grow: 1;
    margin: 10px auto;
    color: black;
  }

  .mapcat {
    position: relative;
    height: 300px;
    width: 300px;
    margin: auto;
  }

  #mapcat_image {
    position: absolute;
    height: 100%;
    width: auto;
  }

  #mapcat_message {
    position: absolute;
    left: 20%;
    width: 55%;
    top: 3%;
    height: 25%;
    z-index: 10;
    font-weight: 500;
    line-height: 1.6;
    text-align: center;
    display: flex;
    color: #333;
    font-size: 15px;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-top: 0px;
  }

  @media (max-width: 768px) {
    .caption h1 {
      display: none;
    }
  }
</style>
